<header>

    <h1>Post It</h1>
    
    <nav>
        <div class="home" id="homeTab">
        <a href="/">Home</a>
        </div>

        <div class="search-bar">
        <form class="search-bar"
        method="GET"
        action="/posts/search"
        enctype="application/x-www-form-urlencoded">
        <input id="search-text" class="search-text" name="searchTerm" type="text" value="{{searchValue}}"/>
        <input type="submit" value="Search">
        </form>

    </div>

        {{#if isLoggedIn}}

        <a id="logout-button">Log Out</a>
        {{else}}
        <a href="/login">Login</a>

        {{/if}}

        <a href="/postimage">Post</a>

    </nav>
        
</header>